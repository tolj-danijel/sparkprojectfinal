{% extends 'base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block body %}


    <form action="{{ path_for('auth.signup') }}" method="POST" style="width:40vw;margin:0 auto;text-align:center;">
        <div class="panel panel-primary">
       <div class="panel-heading ">Sign up</div>
       <div class="panel-body">
  <div class="form-group{{ errors.username ? ' has-error' : '' }}">
    <label for="username">Username:</label>
    <input type="username" class="form-control" id="username" name="username" value="{{ old.username }}">
    {% if errors.username %}
    <span class='help-block'> {{ errors.username | first }}
    {% endif %}
  </div>  
  <div class="form-group{{ errors.password ? ' has-error' : ''}}">
    <label for="password">Password:</label>
    <input type="password" class="form-control" id="password" name="password">
    {% if errors.password %}
    <span class='help-block'> {{ errors.password | first }}
    {% endif %}
  </div>
  <button type="submit" class="btn btn-default">Register!</button>
  </div>
  </div>
{{ csrf.field | raw }}
  
</form>

{% endblock %}