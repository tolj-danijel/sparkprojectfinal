{% extends 'base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block body %}


    <form action="{{ path_for('rent.addrent') }}" method="POST" style="width:40vw;margin:0 auto;text-align:center;">
      <div class="panel panel-primary">
       <div class="panel-heading ">Add a rent</div>
       <div class="panel-body">
  <div class="form-group">
     <label for="user">User:</label>
   <select class="form-control" name='user'>
     {% for user in users %}
     <option value="{{ user.username }}">{{ user.username }}</option>
     {% endfor %}
</select>
  </div>  
    <div class="form-group">
     <label for="car">Car:</label>
   <select class="form-control" name='car'>
     {% for car in cars %}
     <option value="{{ car.id }}" >{{ car.make }},{{ car.model }},{{ car.year }}</option>
     {% endfor %}
</select>
  </div>  
 <div class="form-group">
  <label for="date">Date:</label>
  <input type="date" class="form-control" name="date">
</div>
  <button type="submit" class="btn btn-default" >Rent the car!</button>
{{ csrf.field | raw }}
    </div>
    </div>
</form>

{% block javascripts %}

{% endblock %}

{% endblock %}


